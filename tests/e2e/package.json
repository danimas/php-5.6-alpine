{
  "name": "e2e_tests",
  "version": "1.0.0",
  "description": "E2E tests for the entire application of UpShow",
  "scripts": {
    "unit-test": "mocha --config mocharc.json ./unit_tests/**/*.js",
    "unit-test-coverage": "nyc --reporter=text mocha --config mocharc.json ./unit_tests/**/*.js",
    "doc-test-suites": "node scripts/generate_suite_documentation.js",
    "general-doc": "node scripts/generate_general_documentation.js",
    "documentation": "npm run doc-test-suites && npm run general-doc",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "test": "nightwatch --env=local",
    "test-selenium": "nightwatch --env=selenium",
    "e2e": "nightwatch --env=e2e",
    "html-report": "nightwatch-html-reporter -d tests_output --theme default --relative-screenshots --unique-filename"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "bent": "^7.0.2",
    "chai": "^4.2.0",
    "chromedriver": "^86.0.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "geckodriver": "1.20.0",
    "getlorem": "^1.0.1",
    "glob": "^7.1.6",
    "image-size": "^0.8.3",
    "image-type": "^4.1.0",
    "jsdoc-to-markdown": "latest",
    "jsdoc-to-markdown-jc": "^5.0.5",
    "mocha": "^6.2.2",
    "nightwatch": "1.4.3",
    "nightwatch-html-reporter": "^2.0.6",
    "nyc": "^14.1.1",
    "read-chunk": "^3.2.0",
    "selenium-server": "3.141.59",
    "uuid": "^3.3.3"
  }
}
